{
  "name": "homemade-recipes",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "An extension of @vanilla-extract/recipes that adds responsive variant utilities.",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "build": "pnpm run clean && pnpm run compile",
    "clean": "rimraf ./dist",
    "lint": "eslint --ext js,ts,tsx .",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "pnpm build && changeset publish",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@babel/preset-env": "7.23.7",
    "@babel/preset-typescript": "7.23.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@nayhoo/eslint-config": "^1.0.2",
    "@nayhoo/prettier-config": "^1.0.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/jest": "29.0.0",
    "@vanilla-extract/css": "1.16.1",
    "@vanilla-extract/esbuild-plugin": "^2.3.12",
    "@vanilla-extract/jest-transform": "1.1.1",
    "eslint": "~8.57.0",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "~5.0.0",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "~5.3.3"
  },
  "peerDependencies": {
    "@vanilla-extract/css": "^1"
  }
}
